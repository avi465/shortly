<!-- Login Page -->
<div class="min-h-full flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8 polka-pattern bg-center bg-cover">
    <div class="max-w-sm w-full space-y-6 px-6 sm:px-6 lg:px-8 py-8 bg-neutral-50">
        <div>
            <h2 class="text-center text-3xl font-extrabold text-gray-900">
                Sign into account
            </h2>
        </div>
        <form class="space-y-6" action="/signin" method="POST">
            <input type="hidden" name="remember" value="true">
            <div class="rounded-md shadow-sm -space-y-px">
                <div class="py-1">
                    <label for="email-address" class="font-semibold text-sm text-gray-600 py-1">Email address</label>
                    <input id="email-address" name="username" type="email" autocomplete="email" required
                        class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm z-0">
                </div>
                <div class="py-1">
                    <label for="password" class="font-semibold text-sm text-gray-600 py-1">Password</label>
                    <input id="password" name="password" type="password" autocomplete="current-password" required
                        class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm z-0">
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="remember-me" name="remember-me" type="checkbox"
                        class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded-md">
                    <label for="remember-me" class="ml-2 block text-sm text-gray-600 font-semibold">
                        Remember me
                    </label>
                </div>

                <div class="text-sm">
                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">
                        Forgot your password?
                    </a>
                </div>
            </div>

            <div>
                <button type="submit"
                    class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Sign in
                </button>
            </div>
        </form>
        <div class="relative">
            <hr class="border-b bg-neutral-300 border-neutral-300">
            <span>
                <h1
                    class="font-semibold text-gray-600 text-sm px-2 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white">
                    or</h1>
            </span>
        </div>
        <!-- social logins -->
        <div class="">
            <a href="/auth/google">
                <button class="border-2 rounded-md w-full py-2 px-3 group hover:border-neutral-300">
                    <i class="fab fa-google text-sm text-gray-600 px-1"></i>
                    <span class="font-medium text-sm text-neutral-600 px-1">Continue with
                        Google</span>
                </button>
            </a>
        </div>
    </div>
</div>