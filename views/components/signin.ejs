<!-- Login Page -->
<div class="min-h-full flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8 bg-hero-pattern bg-center bg-cover">
    <div class="max-w-sm w-full space-y-6 px-6 sm:px-6 lg:px-8 py-8 bg-gray-50 rounded-md shadow">
        <div>
            <h2 class="text-center text-3xl font-extrabold text-gray-900">
                Sign in to your account
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Or
                <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">
                    start your 14-day free trial
                </a>
            </p>
        </div>
        <form class="space-y-6" action="/signin" method="POST">
            <input type="hidden" name="remember" value="true">
            <div class="rounded-md shadow-sm -space-y-px">
                <div class="py-1">
                    <label for="email-address" class="font-semibold text-sm text-gray-600 py-1">Email address</label>
                    <input id="email-address" name="username" type="email" autocomplete="email" required
                        class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm z-0">
                </div>
                <div class="py-1">
                    <label for="password" class="font-semibold text-sm text-gray-600 py-1">Password</label>
                    <input id="password" name="password" type="password" autocomplete="current-password" required
                        class="appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm z-0">
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="remember-me" name="remember-me" type="checkbox"
                        class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded-md">
                    <label for="remember-me" class="ml-2 block text-sm text-gray-600 font-semibold">
                        Remember me
                    </label>
                </div>

                <div class="text-sm">
                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">
                        Forgot your password?
                    </a>
                </div>
            </div>

            <div>
                <button type="submit"
                    class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <!-- Heroicon name: solid/lock-closed -->
                        <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400"
                            xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                            aria-hidden="true">
                            <path fill-rule="evenodd"
                                d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                clip-rule="evenodd" />
                        </svg>
                    </span>
                    Sign in
                </button>
            </div>
        </form>
        <div class="relative">
            <hr class="border-b bg-gray-300 border-gray-100">
            <span>
                <h1
                    class="font-semibold text-gray-600 text-sm px-2 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white">
                    Or continue with</h1>
            </span>
        </div>
        <!-- social logins -->
        <div class="grid grid-cols-3 gap-2">
            <a href="/auth/facebook">
                <button class="border-2 rounded-md w-full py-2 px-3 group hover:bg-stone-600"><i
                        class="fab fa-facebook text-lg text-gray-600 group-hover:text-white"></i></button>
            </a>
            <a href="/auth/google">
                <button class="border-2 rounded-md w-full py-2 px-3 group hover:bg-stone-600"><i
                        class="fab fa-google text-lg text-gray-600 group-hover:text-white"></i></button>
            </a>
            <a href="/auth/twitter">
                <button class="border-2 rounded-md w-full py-2 px-3 group hover:bg-stone-600"><i
                        class="fab fa-twitter text-lg text-gray-600 group-hover:text-white"></i></button>
            </a>
        </div>
    </div>
</div>